{
  "manifest_version": 3,
  "name": "Robust Patcher",
  "version": "2.2.0",
  "description": "Применение патчей к файлам с интеграцией Claude.ai",
  "permissions": ["storage", "clipboardRead", "system.display"],
  "host_permissions": ["*://claude.ai/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://claude.ai/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}